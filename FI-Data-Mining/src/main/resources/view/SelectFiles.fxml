<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SelectFilesController">
	<top>
		<Text strokeType="OUTSIDE" strokeWidth="0.0"
			text="Fischer International Data Mining" textAlignment="CENTER"
			BorderPane.alignment="CENTER">
			<font>
				<Font size="36.0" />
			</font>
			<BorderPane.margin>
				<Insets />
			</BorderPane.margin>
		</Text>
	</top>
	<center>
		<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
			BorderPane.alignment="CENTER">
			<children>
				<Text fx:id="stepNumberText" strokeType="OUTSIDE" strokeWidth="0.0"
					text="Step 1/4:">
					<font>
						<Font size="24.0" />
					</font>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Text>
				<Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select File(s)">
					<font>
						<Font size="24.0" />
					</font>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Text>
				<VBox>
					<children>
						<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
							<children>
								<TextField fx:id="fileTextField">
									<HBox.margin>
										<Insets left="5.0" right="5.0" />
									</HBox.margin>
								</TextField>
								<Button fx:id="chooseFileButton" mnemonicParsing="false"
									onAction="#chooseFile" text="Choose File">
									<HBox.margin>
										<Insets left="5.0" right="5.0" />
									</HBox.margin>
								</Button>
								<Button fx:id="clearFieldButton" mnemonicParsing="false"
									onAction="#clearField" text="Clear Field">
									<HBox.margin>
										<Insets left="5.0" right="5.0" />
									</HBox.margin>
								</Button>
							</children>
							<VBox.margin>
								<Insets />
							</VBox.margin>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</HBox>
						<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
							<children>
								<Button fx:id="addFileButton" mnemonicParsing="false"
									onAction="#addFile" text="Add File">
									<HBox.margin>
										<Insets left="5.0" right="5.0" />
									</HBox.margin>
								</Button>
								<Button fx:id="removeLastFileButton" mnemonicParsing="false"
									onAction="#removeLastFile" text="Remove Last File">
									<HBox.margin>
										<Insets left="5.0" right="5.0" />
									</HBox.margin>
								</Button>
								<Button fx:id="removeAllFilesButton" mnemonicParsing="false"
									onAction="#removeAllFiles" text="Remove All Files">
									<HBox.margin>
										<Insets left="5.0" right="5.0" />
									</HBox.margin>
								</Button>
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</HBox>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</VBox>
				<Button fx:id="nextButton" mnemonicParsing="false" onAction="#next"
					text="Next">
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Button>
			</children>
			<BorderPane.margin>
				<Insets />
			</BorderPane.margin>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
	</center>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</BorderPane>
